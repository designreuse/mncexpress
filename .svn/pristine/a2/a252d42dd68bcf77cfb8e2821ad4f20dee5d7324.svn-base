	var lang = '<c:out value="${sessionScope.lang}"/>';
	var flagSource ="<c:url value='/resources/images/nation/usd.png'/>"; 
	if(lang == 'ko'){
		flagSource ="<c:url value='/resources/images/nation/kor.png'/>";
	}else if(lang == null || lang =="") {
		lang = 'en';
	}
</script>

